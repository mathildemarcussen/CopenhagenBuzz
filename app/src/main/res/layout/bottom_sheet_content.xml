<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Denne container bliver styret af BottomSheetBehavior -->
    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:elevation="4dp">

        <!-- Indholdet i dit Bottom Sheet (RecyclerView, tekst, knapper osv.) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Eksempel: En TextView -->
            <TextView
                android:id="@+id/bs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hej fra BottomSheet"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Her kunne også være en RecyclerView, etc. -->

        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
